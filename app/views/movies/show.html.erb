<article>
  <header>
    <h1><%= @movie.title %></h1>
  </header>
  <%= image_for(@movie) %>
  <h2>Description: </h2>
  <p><%= @movie.description %></p>
  <h3>Director:</h3>
  <p><%= @movie.director %></p>
  <h3>Cast:</h3>
  <p><%= @movie.cast %></p>
  <h3>Duration:</h3>
  <p><%= @movie.duration %></p>
  <h3>Rating: </h3>
  <p><%= @movie.rating %></p>
  <h3>Released on: </h3>
  <p><%= @movie.released_on %></p>
  <h2>Total Gross: </h2>
  <p><%= format_total_gross(@movie) %></p>
</article>

<nav>
<%= link_to "Edit", edit_movie_path(@movie) %>
<%= link_to "Delete", movie_path(@movie), method: :delete, data: { confirm: 'Are you sure?' } %>
</nav>
