<h1><%= pluralize(@movies.size, 'Movie') %> </h1>

<% @movies.each do |movie| %>
  <article class="movie">
    <!-- Original: link_to movie.title, movie_path(movie) -->
    <header><h2><%= link_to movie.title, movie %></h2></header>
    <p><%= truncate(movie.description, length: 40, separator: ' ') %></p>
    <div class="media-object">
      <div class="media-object-section">
        <div class="thumbnail">
          <%= image_for(movie) %>
        </div>
      </div>
    </div>
    <div class="media-object-section">
      <table>
        <tr>
          <th>
            Cast:
          </th>
          <td>
            <%= movie.cast %>
          </td>
        </tr>
        <tr>
          <th>
            Duration:
          </th>
          <td>
            <%= movie.duration %>
          </td>
        </tr>
        <tr>
          <th>
          Released:
          </th>
          <td>
            <%= movie.released_on %>
            (<%= time_ago_in_words(movie.released_on) %>)
          </td>
        </tr>
        <tr>
          <th>
          Rating:
          </th>
          <td>
            <%= movie.rating %>
          </td>
        </tr>
        <tr>
          <th>
          Total Gross:
          </th>
          <td>
            <%= format_total_gross(movie) %>
          </td>
        </tr>
      </table>
    </div>
  </article>
<% end %>
